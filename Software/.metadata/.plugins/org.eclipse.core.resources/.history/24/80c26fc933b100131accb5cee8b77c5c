#include "control.c"
#include "system.h"
#include "drivers/motor.h"
#include "drivers/ir_sensor.h"



void drive_straight(){

	update_motor(RIGHT_MOTOR, CW, 100);
	update_motor(RIGHT_MOTOR, CCW, 100);

	while(1){

	Semaphore_pend(sidepoll_sem_handle, BIOS_WAIT_FOREVER);


	}

}
